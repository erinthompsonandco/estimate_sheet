<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvpricequality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:layout_weight="1"
        android:text="Price and Quality"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp" />


    <TextView
        android:id="@+id/tvpricetoreplace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text=" Price to replace "
        android:textColor="@color/gray"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etpricetoreplace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:hint="@string/width"
        android:inputType="numberDecimal"
        android:textColor="@color/gray"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/rgquality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/rbbasic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Basic"
            android:textColor="@color/gray"
            android:textSize="28sp" />

        <RadioButton
            android:id="@+id/rbdeluxe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deluxe"
            android:textColor="@color/gray"
            android:textSize="28sp" />

        <RadioButton
            android:id="@+id/rbpremire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Premiere"
            android:textColor="@color/gray"
            android:textSize="28sp" />

        <RadioButton
            android:id="@+id/rboptimum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Optimum"
            android:textColor="@color/gray"
            android:textSize="28sp" />
    </RadioGroup>


</LinearLayout>